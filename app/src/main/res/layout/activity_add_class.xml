<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suguiming.superclass.classTab.AddClassActivity">

    <LinearLayout
        android:background="@color/white"
        android:onClick="selectStudent"
        android:id="@+id/tap_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="学员:"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/student_tv"
            android:layout_marginLeft="10dp"
            android:hint="请选择学员"
            android:gravity="center_vertical|left"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!-- 时间调整 -->
    <LinearLayout
        android:background="@mipmap/add_class_backimg"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/date_tv"
            android:onClick="timeTap"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/begin_tv"
            android:onClick="timeTap"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/end_tv"
            android:onClick="timeTap"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>
