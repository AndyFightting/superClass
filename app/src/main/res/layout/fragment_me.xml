<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suguiming.superclass.meTab.MeFragment">

    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.example.suguiming.superclass.basic.CircleImageView
            android:id="@+id/header_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/clear"
            android:src="@mipmap/radius_head" />

        <TextView
            android:id="@+id/sign_tv"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="签名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/sign_tv"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="名字"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ListView
        android:id="@+id/me_list"
        android:divider="@color/light_gray"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>
