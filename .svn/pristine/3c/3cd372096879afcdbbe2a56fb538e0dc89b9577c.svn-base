<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suguiming.superclass.login.UpHeadActivity">

    <com.example.suguiming.superclass.basic.CircleImageView
        android:id="@+id/upheader_img"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/radius_head"
        android:clickable="true"
        android:onClick="headImgTap"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <TextView
        android:layout_marginTop="30dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <EditText
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/white"
        android:hint="请输入昵称" />
    <TextView
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:onClick="finishTap"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:text="完成"/>

</LinearLayout>
